  <form onsubmit="login(event)">
    <input type="text" id="username" placeholder="Numeric Username" required />
    <input type="password" id="password" placeholder="Numeric Password" required />
    <button type="submit">Login</button>
  </form>

  <script>
    function login(e) {
      e.preventDefault();
      const user = document.getElementById("username").value;
      const pass = document.getElementById("password").value;

      const isNumeric = /^\d+$/;

      if (!isNumeric.test(user) || !isNumeric.test(pass)) {
        alert("Username and password must be numbers only.");
        return;
      }

      alert("Login successful (placeholder)");
      // Replace with real logic later
    }
  </script>
